{
  "name": "passman",
  "private": true,
  "version": "1.0.0",
  "description": "Passman â€” a simple offline password vault",
  "author": "MrFresh424",
  "type": "module",
  "main": "main.js",
  "scripts": {
    "dev": "vite",
    "preview": "vite preview --port 5173",
    "build:web": "vite build",
    "electron:dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:pack": "npm run build:web && electron-builder",
    "dist": "npm run dist:win",
    "dist:win": "npm run build:web && electron-builder --win nsis portable"
  },
  "dependencies": {
    "argon2-browser": "^1.18.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.64",
    "@types/react-dom": "^18.2.21",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "electron": "^29.1.4",
    "electron-builder": "^24.13.3",
    "typescript": "^5.4.2",
    "vite": "^5.1.5",
    "vite-plugin-pwa": "^0.19.2",
    "vite-plugin-top-level-await": "^1.6.0",
    "vite-plugin-wasm": "^3.5.0",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.passman.app",
    "productName": "Passman",
    "files": [
      "dist/**/*",
      "main.js",
      "preload.js",
      "assets/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "assets/app-icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "assets/app-icon.ico",
      "uninstallerIcon": "assets/app-icon.ico",
      "artifactName": "Passman Setup ${version}.exe"
    },
    "portable": {
      "artifactName": "Passman Portable.exe"
    }
  }
}
